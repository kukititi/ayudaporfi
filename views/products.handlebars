{{> navbar}}

        <div class="container-fluid hero-section text-center">  
            <div class="hero-text">
                <h2>Editor</h2>
            </div>
        </div>
            <div class="container text-center">
              <div class="row align-items-center">
                <div class="col">
                  <form action="/producti" method="POST">
                      <div class="row g-4 align-items-center">
                             <div class="col-5">
                          <label for="Imagen" class="form-label"><img src="/Imagenes/logo.png" width="50%" height="50%"></label>
                            <input name="image" type="file" class="form-control" id="Imagen" placeholder="Foto">
                              </div>
                        <div class="col-3">
                      <label for="Nombre" class="form-label">Nombre de producto</label>
                      <input type="text" class="form-control" id="Nombre" name="name" placeholder="Nombre de producto" required>
                          <label for="Categoria" class="form-label">Categoria</label>
                          <select id="Categoria" class="form-select" name="categ" required>
                            <option selected>Categoria del producto</option>
                            <option>Replicas</option>
                            <option>Accesorios</option>
                            <option>Equipamiento</option>
                            <option>Repuestos</option>
                          </select>
                                    </div>
                            <div class="col-3">
                    <label for="Descripcion-base" class="form-label">Descripción Básica</label>
                    <input type="text" class="form-control" id="Descripcion-base" name="db" placeholder="Descripción Básica" required>
                              <label for="Precio" class="form-label">Precio</label>
                              <input type="text" class="form-control" id="Precio" name="price" placeholder="Precio" required>
                              </div>
                          <div class="col">
                      <label for="Descripcion" class="form-label">Descripción</label>
                      <input type="text" class="form-control" id="Descripcion" name="descr" placeholder="Descripción" required>
                          </div>
                          <button type="submit">Ingresar</button>
                          </div>
                  </form>
                </div>
              </div>
            </div>