 <div class="container-fluid hero-section text-center vh-100 d-flex justify-content-center align-items-center">
<form action="/registrar" method="post" class="form">
    <p id="heading">Registrate</p>
    <div class="field">
      <input name="name" autocomplete="off" placeholder="Nombre" class="input-field" type="text">
    </div>
    <div class="field">
      <input name="email" autocomplete="off" placeholder="Email" class="input-field" type="text">
    </div>
    <div class="field">
      <input name="password" placeholder="Contraseña" class="input-field" type="password">
    </div>
    <div class="btn">
    <button class="button1" type="submit">Registrarse</button>
    </div>
    <div class="btn">
    <button class="button2"><a href="/login">Inicia Sesión</a></button>
    </div>
</form>
